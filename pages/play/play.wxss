/* 轮播组件 */
.swiperBox{
    /* background: pink; */
    /* height: 100%; */
    min-height: 100vh;
  }
  /* 播放页面 */
  .containerPlay{
    /* overflow: hidden; */
    background: linear-gradient(#fc67fa 5%,#f4c4f3,#fffcdc);
    /* background: #ffc0cb; */
    min-height: 100vh;
  }
  /* 大盒子 */
  .Box{
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  /* 大盒子 */
  /* 头部 */
  .header{
    text-align: center;
  }
  /* 中间 */
  .center{
    height: 900rpx;
    /* padding: 180rpx 0; */
  }
  .centerBox{
    width: 100%;
    height: 70%;
    /* background-color: yellow; */
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
  }
  .centerBox .picture{
    width: 320px;
    height: 280px;
    /* overflow: hidden; */
    border-radius: 30rpx;
    box-shadow: 0 30rpx 70rpx rgb(170, 148, 148);
    animation: ani 2s infinite linear;
  }
  @keyframes ani{
      0%{
        box-shadow: 0 30rpx 70rpx rgb(212, 148, 148);
      }
      50%{
        box-shadow: 0 30rpx 70rpx rgb(255, 121, 121);
      }
      100%{
        box-shadow: 0 30rpx 70rpx rgb(212, 148, 148);
      }

  }
  .centerFooter{
    height: 30%;
    text-align: center;
    display: flex;
    flex-direction: column;
  }
  .TextBox{
    /* background: tomato; */
    display: flex;
    flex-direction: column;
  }
  .TextBox .text{
    margin: 10rpx 0;
  }
  .progressBar{
    /* background: pink; */
    height: 100%;
    /* display: flex;
    align-items: center; */
  }
  .progressBar .text1{
    color: white;
  }
  .progressBar .AllProgress{
    flex: 1;
  }
  .TextTime{
    position: relative;
    box-sizing: border-box;
  }
  .TextTime .startTime{
    left: 20rpx;
    position: absolute;
    font-size: 25rpx;
  }
  .TextTime .endTime{
    position: absolute;
    right: 20rpx;
    font-size: 25rpx;
  }
  /* 底部 */
  .footer{
    /* border-top: 1px solid black; */
    padding: 80rpx 0;
  }
  .footerPlay{
    /* background: pink; */
    display: flex;
    align-items: center;
  }
  .PlayIcon{
    flex: 1;
    width: 80rpx;
    height: 80rpx;
    border-radius: 30rpx;
  }
  .PlayIcon:active{
    background: rgb(248, 239, 222);
  }
  .PlayIcon:nth-child(3){
    width: 120rpx;
    height: 120rpx;
  }
  .footerButton{
    position: relative;
    display: flex;
    justify-content: space-between;
    box-sizing:border-box;
  }
  .footerLeft{
    margin-top: 40rpx;
    height: 120rpx;
    width: 120rpx;
    background: #f6ea8c;
    border-radius: 50%;
    text-align: center;
    line-height: 120rpx;
  }
  .footerRight{
    margin-top: 40rpx;
    /* border-radius: 50%; */
    text-align: center;
    line-height: 120rpx;
    width: 120rpx;
    height: 120rpx;
    /* position: absolute; */
    /* right: 0; */
    background: #fab1ce;
  }
  /* 歌词页面样式 */
  .LyricMusic{
    min-height: 100vh;
    text-align: center;
    /* background: palegoldenrod; */
  }
  .TextLyr{
    display: flex;
    flex-direction: column;
  }
  .LyrM{
    font-size: 45rpx;
    font-weight: 600;
    margin-top: 10rpx
    ;
  }
  .LyrN{
    margin: 10rpx 0;
    font-size: 40rpx;
  }
  .scrollBox{
    height: 100vh;
    /* height: 1300rpx; */
    /* background: pink; */
  }
  .slider2{
    padding: 0 100rpx;
  }
  .Lyr{
      margin: 30rpx 0;
      color: rgb(16, 16, 17);
  }
  .Lyractive{
      color: rgb(255, 64, 239);
      font-size: 35rpx;
  }